{

  // Use LinkerScript extension to syntax highlight
  "files.associations": {
    "*.ld": "linkerscript"
  }

  // tree indent – more separation
  "workbench.tree.indent": 16,

  // always show indent guides
  "workbench.tree.renderIndentGuides": "always",

  // color of indent guides
  "workbench.colorCustomizations": {
    "tree.indentGuidesStroke": "#888888",
    "tree.inactiveIndentGuidesStroke": "#444444", 
    // you can also tweak list hover/focus/selection colors
    "list.hoverBackground": "#333333",
    "list.activeSelectionBackground": "#005f5f",
    "list.activeSelectionForeground": "#ffffff"
  },

  "editor.suggest.insertMode": "insert",
  "[cpp]": {
    "editor.suggest.insertMode": "insert"
  }

  // icon theme – pick one that distinguishes clearly
  "workbench.iconTheme": "vscode-great-icons",
  "files.associations": {
    "queue": "cpp",
    "__bit_reference": "cpp",
    "__hash_table": "cpp",
    "__locale": "cpp",
